<% @user ||= current_user %>
<div class="stats">
	<a href="<%= following_user_path(@user) %>">
		<strong id="following" class="stat">
			<%= @user.following.count %>
		</strong>
		following
	</a>
	<a href="<%= followers_user_path(@user) %>">
		<strong id="followers" class="stat">
			<%= @user.followers.count %>
		</strong>
		followers
	</a>
	<a href="#">
		<strong class="stat">
			<%
				micropost = pluralize(current_user.microposts.count, "micropost")
			%>
			<%= micropost.split(' ')[0] %>
		</strong>
		<%= micropost.split(' ')[1] %>
	</a>
</div>